<%= link_to edit_list_path(@list.id), class: 'pull-right btn btn-default' do %>
  <i class="fa fa-pencil"></i> Edit this list
<% end %>

<h1><%= @list.name %></h1>
<% @movies.each do |movie| %>
  <%=  movie.title %>
  <%=  movie.rating %>
  <%=  movie.overview %>
  <%  bookmark = Bookmark.find_by(list: @list, movie: movie) %>
  <%= bookmark.comment %>

<% end%>
<hr>
<%= link_to lists_path do %>
  <i class="fa fa-history"></i> Back to lists
<% end %>
<%= link_to new_bookmark_path do %>
  <i class="fa fa-plus"></i> Add a new bookmark
<% end %>
